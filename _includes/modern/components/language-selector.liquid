<!-- Language Selector Component for Jekyll Polyglot -->
{% assign current_locale = site.active_lang | default: site.default_lang | default: 'en' %}

<div class="language-selector relative inline-block text-left">
  <div>
    <button type="button" 
            class="language-toggle inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200"
            aria-expanded="false" 
            aria-haspopup="true">
      <!-- Flag icon for current language -->
      <span class="flag-icon mr-2">
        {% case current_locale %}
          {% when 'en' %}ğŸ‡ºğŸ‡¸
          {% when 'fr' %}ğŸ‡«ğŸ‡·
          {% when 'sw' %}ğŸ‡°ğŸ‡ª
          {% else %}ğŸŒ
        {% endcase %}
      </span>
      
      <!-- Language name -->
      <span class="language-name">
        {% case current_locale %}
          {% when 'en' %}English
          {% when 'fr' %}FranÃ§ais
          {% when 'sw' %}Kiswahili
          {% else %}English
        {% endcase %}
      </span>
      
      <!-- Dropdown arrow -->
      <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>

  <!-- Dropdown menu -->
  <div class="language-dropdown origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50 hidden"
       role="menu" 
       aria-orientation="vertical" 
       tabindex="-1">
    <div class="py-1" role="none">
      {% for lang in site.languages %}
        {% if lang == site.default_lang %}
          {% assign lang_url = "/" %}
        {% else %}
          {% assign lang_url = "/" | append: lang | append: "/" %}
        {% endif %}
        
        <a href="{{ lang_url }}" 
           class="language-option flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200" 
           role="menuitem" 
           tabindex="-1">
          <span class="flag-icon mr-3">
            {% case lang %}
              {% when 'en' %}ğŸ‡ºğŸ‡¸
              {% when 'fr' %}ğŸ‡«ğŸ‡·
              {% when 'sw' %}ğŸ‡°ğŸ‡ª
              {% else %}ğŸŒ
            {% endcase %}
          </span>
          <span>
            {% case lang %}
              {% when 'en' %}English
              {% when 'fr' %}FranÃ§ais
              {% when 'sw' %}Kiswahili
              {% else %}English
            {% endcase %}
          </span>
          {% if current_locale == lang %}
            <svg class="ml-auto h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</div>