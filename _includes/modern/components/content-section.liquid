<!-- Modern Content Section Component with Tailwind CSS -->
<section class="py-16 {{ include.bg_class | default: 'bg-white' }}">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {% if include.layout == 'two-column' %}
      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="{% if include.image_first %}order-2 lg:order-1{% endif %}">
          {% if include.title %}
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
              {{ include.title }}
            </h2>
          {% endif %}
          
          {% if include.subtitle %}
            <p class="text-xl text-gray-600 mb-6">
              {{ include.subtitle }}
            </p>
          {% endif %}
          
          {% if include.content %}
            <div class="prose prose-lg text-gray-700 mb-8">
              {{ include.content }}
            </div>
          {% endif %}
          
          {% if include.cta_text and include.cta_link %}
            <a href="{{ include.cta_link }}" 
               class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors duration-200">
              {{ include.cta_text }}
              <i class="fas fa-arrow-right ml-2"></i>
            </a>
          {% endif %}
        </div>
        
        <div class="{% if include.image_first %}order-1 lg:order-2{% endif %}">
          {% if include.image %}
            <img src="{{ include.image }}" 
                 alt="{{ include.image_alt | default: include.title }}"
                 class="w-full h-auto rounded-lg shadow-lg">
          {% endif %}
        </div>
      </div>
      
    {% elsif include.layout == 'centered' %}
      <!-- Centered Layout -->
      <div class="text-center max-w-4xl mx-auto">
        {% if include.title %}
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
            {{ include.title }}
          </h2>
        {% endif %}
        
        {% if include.subtitle %}
          <p class="text-xl text-gray-600 mb-8">
            {{ include.subtitle }}
          </p>
        {% endif %}
        
        {% if include.content %}
          <div class="prose prose-lg text-gray-700 mx-auto mb-8">
            {{ include.content }}
          </div>
        {% endif %}
        
        {% if include.image %}
          <img src="{{ include.image }}" 
               alt="{{ include.image_alt | default: include.title }}"
               class="w-full max-w-2xl mx-auto h-auto rounded-lg shadow-lg mb-8">
        {% endif %}
        
        {% if include.cta_text and include.cta_link %}
          <a href="{{ include.cta_link }}" 
             class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors duration-200">
            {{ include.cta_text }}
            <i class="fas fa-arrow-right ml-2"></i>
          </a>
        {% endif %}
      </div>
      
    {% else %}
      <!-- Default Single Column Layout -->
      <div class="max-w-4xl mx-auto">
        {% if include.title %}
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
            {{ include.title }}
          </h2>
        {% endif %}
        
        {% if include.subtitle %}
          <p class="text-xl text-gray-600 mb-8">
            {{ include.subtitle }}
          </p>
        {% endif %}
        
        {% if include.image %}
          <img src="{{ include.image }}" 
               alt="{{ include.image_alt | default: include.title }}"
               class="w-full h-auto rounded-lg shadow-lg mb-8">
        {% endif %}
        
        {% if include.content %}
          <div class="prose prose-lg text-gray-700 mb-8">
            {{ include.content }}
          </div>
        {% endif %}
        
        {% if include.cta_text and include.cta_link %}
          <div class="text-center">
            <a href="{{ include.cta_link }}" 
               class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition-colors duration-200">
              {{ include.cta_text }}
              <i class="fas fa-arrow-right ml-2"></i>
            </a>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>