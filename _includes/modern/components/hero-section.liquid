<!-- Modern Hero Section Component with Tailwind CSS and Internationalization -->
{% assign current_locale = site.locale | default: site.default_locale | default: 'en' %}
{% assign translations = site.data.translations[current_locale] %}

<section class="relative bg-gradient-to-br from-red-600 via-red-700 to-red-800 dark:from-red-800 dark:via-red-900 dark:to-red-950 overflow-hidden theme-transition">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-black opacity-20"></div>
  <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.1"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
    <div class="text-center">
      <!-- Main Heading -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        {% if include.title %}
          {{ include.title }}
        {% else %}
          {{ translations.home.hero_title }}
        {% endif %}
      </h1>

      <!-- Subtitle -->
      {% if include.subtitle %}
        <p class="text-xl md:text-2xl text-red-100 mb-8 max-w-3xl mx-auto leading-relaxed">
          {{ include.subtitle }}
        </p>
      {% endif %}

      <!-- Date and Location -->
      {% if include.date or include.location %}
        <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-8 mb-12 text-red-100">
          {% if include.date %}
            <div class="flex items-center">
              <i class="fas fa-calendar-alt mr-3 text-red-200"></i>
              <span class="text-lg font-medium">{{ include.date }}</span>
            </div>
          {% endif %}
          
          {% if include.location %}
            <div class="flex items-center">
              <i class="fas fa-map-marker-alt mr-3 text-red-200"></i>
              <span class="text-lg font-medium">{{ include.location }}</span>
            </div>
          {% endif %}
        </div>
      {% endif %}

      <!-- Call to Action Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
        {% if include.primary_cta_text and include.primary_cta_link %}
          <a href="{{ include.primary_cta_link }}" 
             class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-lg text-red-700 bg-white hover:bg-red-50 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            {{ include.primary_cta_text }}
            <i class="fas fa-arrow-right ml-2"></i>
          </a>
        {% endif %}

        {% if include.secondary_cta_text and include.secondary_cta_link %}
          <a href="{{ include.secondary_cta_link }}" 
             class="inline-flex items-center px-8 py-4 border-2 border-white text-lg font-medium rounded-lg text-white hover:bg-white hover:text-red-700 transition-all duration-200">
            {{ include.secondary_cta_text }}
            <i class="fas fa-play ml-2"></i>
          </a>
        {% endif %}
      </div>

      <!-- Additional Info -->
      {% if include.additional_info %}
        <div class="mt-12 text-red-100">
          <p class="text-lg">{{ include.additional_info }}</p>
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg class="w-full h-16 text-white" fill="currentColor" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25"></path>
      <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5"></path>
      <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"></path>
    </svg>
  </div>
</section>