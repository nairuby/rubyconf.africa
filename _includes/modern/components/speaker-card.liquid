<!-- Modern Speaker Card Component with Tailwind CSS -->
<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
  <!-- Speaker Image -->
  <div class="relative overflow-hidden">
    <img 
      src="{{ include.speaker.image | default: '/images/default-speaker.jpg' }}" 
      alt="{{ include.speaker.name }}"
      class="w-full h-64 object-cover object-center rounded-t-lg group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
    {% if include.speaker.is_keynote == true or include.speaker.is_keynote == "Yes" %}
      <div class="absolute top-4 right-4 bg-red-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
        <i class="fas fa-star mr-1"></i>
        Keynote
      </div>
    {% endif %}
  </div>

  <!-- Speaker Info -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-red-600 transition-colors duration-200">
      <a href="/speakers/{{ include.speaker.name | slugify }}" class="hover:underline">
        {{ include.speaker.name }}
      </a>
    </h3>
    
    <p class="text-gray-600 text-sm mb-3 font-medium">
      {{ include.designation | default: "Speaker" }}
    </p>
    
    {% if include.speaker.bio %}
      <p class="text-gray-700 text-sm mb-4 line-clamp-3">
        {{ include.speaker.bio }}
      </p>
    {% endif %}

    {% if include.speaker.talk_title and include.speaker.talk_title != "" and include.speaker.talk_title != emptly %}
      <div class="mb-4">
        <h4 class="text-sm font-semibold text-gray-900 mb-1">Talk:</h4>
        <p class="text-sm text-gray-700">{{ include.speaker.talk_title }}</p>
      </div>
    {% endif %}

    <!-- Social Links -->
    <div class="flex space-x-3 pt-4 border-t border-gray-100">
      {% if include.speaker.github and include.speaker.github != "" %}
        <a href="{{ include.speaker.github }}" 
           class="text-gray-400 hover:text-gray-900 transition-colors duration-200"
           target="_blank" rel="noopener noreferrer">
          <i class="fab fa-github text-lg"></i>
        </a>
      {% endif %}
      
      {% if include.speaker.linkedin and include.speaker.linkedin != "" %}
        <a href="{{ include.speaker.linkedin }}" 
           class="text-gray-400 hover:text-blue-700 transition-colors duration-200"
           target="_blank" rel="noopener noreferrer">
          <i class="fab fa-linkedin text-lg"></i>
        </a>
      {% endif %}
      
      {% if include.speaker.website and include.speaker.website != "" %}
        <a href="{{ include.speaker.website }}" 
           class="text-gray-400 hover:text-green-600 transition-colors duration-200"
           target="_blank" rel="noopener noreferrer">
          <i class="fas fa-globe text-lg"></i>
        </a>
      {% endif %}
      
      {% if include.speaker.twitter and include.speaker.twitter != "" %}
        <a href="{{ include.speaker.twitter }}" 
           class="text-gray-400 hover:text-blue-500 transition-colors duration-200"
           target="_blank" rel="noopener noreferrer">
          <i class="fa-brands fa-x-twitter text-lg"></i>
        </a>
      {% endif %}
    </div>
  </div>
</div>