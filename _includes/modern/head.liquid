<head>
	<meta charset="utf-8"/>
	<title>{{ page.title | default: "Ruby Conf Africa 2026 - Leading Ruby Developers Conference in Nairobi, Kenya" }}</title>
	<meta name="description" content="{{ page.description | default: "Join us on August 21 - 22, 2026, for Ruby Conference Africa in Nairobi, Kenya. Connect with leading Ruby developers, learn from insightful sessions, and explore the latest trends in Ruby development." }}"/>

	<!-- Favicon -->
	<link rel="icon" href="{{ '/images/favicon.ico' | prepend: site.baseurl }}" type="image/x-icon"/>
	<link rel="icon" type="image/png" sizes="16x16" href="{{ '/images/favicons/favicon-16x16.png' | prepend: site.baseurl }}"/>
	<link rel="icon" type="image/png" sizes="32x32" href="{{ '/images/favicons/favicon-32x32.png' | prepend: site.baseurl }}"/>
	<link rel="apple-touch-icon" sizes="180x180" href="{{ '/images/favicons/apple-touch-icon.png' | prepend: site.baseurl }}"/>
	<link rel="manifest" href="{{ '/site.webmanifest' | prepend: site.baseurl }}"/>
	<meta name="apple-mobile-web-app-title" content="Ruby Conf Africa 2026"/>
	<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent"/>

	<!-- For Android devices -->
	<meta name="theme-color" content="#ffffff"/>
	<meta name="mobile-web-app-capable" content="yes"/>
	<meta name="application-name" content="Ruby Conf Africa 2026"/>
	<link rel="icon" type="image/png" sizes="192x192" href="{{ '/images/favicons/android-chrome-192x192.png' | prepend: site.baseurl }}"/>
	<link rel="icon" type="image/png" sizes="512x512" href="{{ '/images/favicons/android-chrome-512x512.png' | prepend: site.baseurl }}"/>

	<!-- Modern Tailwind CSS -->
	<link href="{{ site.baseurl }}/assets/modern/css/main.css" rel="stylesheet" />
	
	<!-- Font Awesome for icons -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

	<!-- Modern JavaScript - loaded at end of head for better performance -->
	<script src="{{ site.baseurl }}/assets/modern/js/bundle.js" defer></script>
	<script src="{{ site.baseurl }}/assets/modern/js/navigation.js" defer></script>

	{% include google_analytics.liquid %}

	<!-- Meta Tags for Responsive Design -->
	<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

	<!-- Open Graph meta tags -->
	<meta property="og:title" content="{{ page.title | default: 'Ruby Conf Africa 2026' }}"/>
	<meta property="og:description" content="{{ page.description | default: 'Join us on the 21st to 22nd August 2026, as leading Ruby developers from around the world come together in Nairobi, Kenya, to share, inspire, and learn.' }}"/>
	<meta property="og:image" content="https://rubyconf.africa/images/og_rubyconf2.png"/>
	<meta property="og:url" content="{{ page.url | absolute_url | default: site.url }}"/>
	<meta property="og:type" content="website"/>
	<meta property="og:site_name" content="Ruby Conf Africa 2026"/>

	<!-- Twitter meta tags -->
	<meta name="twitter:card" content="summary_large_image"/>
	<meta property="twitter:domain" content="rubyconf.africa">
	<meta property="twitter:url" content="https://rubyconf.africa">
	<meta name="twitter:title" content="{{ page.title | default: 'Ruby Conf Africa 2026: Connect, Learn, & Grow with Ruby' }}"/>
	<meta name="twitter:description" content="{{ page.description | default: 'Join leading Ruby developers in Nairobi, Kenya on August 21 - 22, 2026 for Ruby Conf Africa. Share knowledge, gain inspiration, and network within the vibrant Ruby community.' }}"/>
	<meta name="twitter:image" content="https://rubyconf.africa/images/og_rubyconf2.png"/>

	<!-- JSON-LD -->
	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Event",
			"name": "Ruby Conf Africa 2026",
			"description": "{{ page.description | default: "Join us on August 21 - 22, 2026, for Ruby Conference Africa in Nairobi, Kenya. Connect with leading Ruby developers, learn from insightful sessions, and explore the latest trends in Ruby development." }}",
			"image": "{{ page.image | prepend: site.baseurl | default: 'https://rubyconf.africa/images/logo/arc_logo_coloured.png' }}",
			"startDate": "2026-07-18T09:00",
			"endDate": "2026-07-19",
			"eventStatus": "https://schema.org/EventScheduled",
			"eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
			"location": {
				"@type": "Place",
				"name": "Daystar University",
				"address": {
					"@type": "PostalAddress",
					"addressLocality": "Nairobi",
					"postalCode": "9 0145",
					"addressCountry": "KE"
				}
			}
		}
	</script>
</head>