<div class="speaker-block-two col-xl-3 col-lg-4 col-md-6 col-sm-12 wow fadeInUp">
    <div class="inner-box">
        <div class="info-box">
            <h4 class="name">
                <a href="/2025/speakers/{{ include.speaker.name | slugify }}">{{ include.speaker.name }}</a>
            </h4>
            <span class="designation">{{ include.designation }}
                {% if include.speaker.is_keynote == true %}
                    <i class="fas fa-star text-yellow-500"></i>
                {% endif %}
            </span>
        </div>
        <div class="image-box">
            <figure class="image">
                <a href="/2025/speakers/{{ include.speaker.name | slugify }}">
                    <img src="{{ include.speaker.image }}" alt="{{ include.speaker.name }}"
                         style="width: 200px; height: 145px"/>
                </a>
            </figure>
        </div>
        <div class="social-box">
            <ul class="social-links social-icon-colored">
                <!--                <li>-->
                <!--                    <a href="#"><i class="fab fa-facebook-f"></i></a>-->
                <!--                </li>-->
                {% if include.speaker.twitter and include.speaker.twitter != "" %}
                    <li>
                        <a href="{{ include.speaker.twitter }}"><i class="fa-brands fa-x-twitter"></i></a>
                    </li>
                {% endif %}
                {% if include.speaker.linkedin and include.speaker.linkedin != "" %}
                    <li>
                        <a href="{{ include.speaker.linkedin }}"><i class="fab fa-linkedin"></i></a>
                    </li>
                {% endif %}
                {% if include.speaker.website and include.speaker.website != "" %}
                    <li>
                        <a href="{{ include.speaker.website }}"><i class="fab fa-sistrix"></i></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
