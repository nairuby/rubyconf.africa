<!-- _includes/sponsor_section.liquid -->
<section class="clients-section">
    <div class="anim-icons">
        <span class="icon icon-dots-3 wow zoomIn"></span>
    </div>
    <div class="auto-container">
        <div class="sec-title text-center">
            <h2 style="color: #c11803; font-size: clamp(2rem, 3vw, 2.5rem);">{{ include.title }}</h2>
            <hr />
            <span class="title">{{ include.description }}</span>
        </div>

        <div class="sponsors-outer">
            <div class="row justify-content-center align-items-center">
                {% for sponsor in site.data.new_remote.sponsors_2025 %}
                    {% if sponsor.categories contains include.category %}
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center align-items-center mb-4">
                            <a href="{{ sponsor.url }}" target="_blank" class="d-flex w-100 justify-content-center p-3">
                                <img
                                        src="{{ sponsor.image }}"
                                        alt="{{ sponsor.name }}"
                                        class="img-fluid lazyload"
                                        style="max-height: 140px; object-fit: contain;"
                                />
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>
