{% comment %}Assign conference year{% endcomment %}
{% assign url_parts = page.url | split: '/' %}
{% assign year = url_parts[1] %}
<!-- Main Footer -->
<footer class="main-footer">
    <!--Widgets Section-->
    <div class="widgets-section">
        <div class="auto-container">
            <div class="row">
                <!--Big Column-->
                <div class="big-column col-xl-6 col-lg-12 col-md-12 col-sm-12">
                    <div class="row">
                        <!--Footer Column-->
                        <div
                                class="footer-column col-xl-7 col-lg-6 col-md-6 col-sm-12"
                        >
                            <div class="footer-widget about-widget">
                                <div class="logo">
                                    <a href="{{ site.baseurl }}/{{ year }}/index"
                                    ><img
                                                src="{{'/images/logo/archive_arclogo.png' | prepend: site.baseurl }}"
                                                class="lazyload"
                                                alt="Africa Ruby Community Logo - Building a vibrant Ruby community in Africa"
                                                width="200"
                                                height="50"
                                                loading="lazy"
                                        /></a>
                                </div>
                                {% comment %}<div class="text">{% endcomment %}
                                    {% comment %}<p>{% endcomment %}
                                        {% comment %}Join us on the 26th to 27th July 2024, as leading Ruby{% endcomment %}
                                        {% comment %}developers from around the world come together in{% endcomment %}
                                        {% comment %}Nairobi, Kenya, to share, inspire, and learn.{% endcomment %}
                                    {% comment %}</p>{% endcomment %}
                                {% comment %}</div>{% endcomment %}
                                <ul class="social-icon-one social-icon-colored">
                                    <li>
                                        <a
                                                href="https://web.facebook.com/rubycommunity.africa"
                                        ><i class="fab fa-facebook-f"></i
                                            ></a>
                                    </li>
                                    <li>
                                        <a href="https://twitter.com/ruby_african"
                                        ><i class="fa-brands fa-x-twitter"></i
                                            ></a>
                                    </li>
                                    <li>
                                        <a href="https://www.linkedin.com/company/83046693"
                                        ><i class="fab fa-linkedin"></i
                                            ></a>
                                    </li>
                                    <li>
                                        <a href="https://www.youtube.com/@nairubyorg7626"
                                        ><i class="fab fa-youtube"></i
                                            ></a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!--Footer Column-->
                        <div class="footer-column col-xl-5 col-lg-6 col-md-6 col-sm-12">
                            <div class="footer-widget useful-links">
                                <h2 class="widget-title">Quick Links</h2>
                                <ul class="user-links">
                                    <li><a href="/{{ year }}/index">Home</a></li>
                                    <li><a href="/{{ year }}/about-us">About Us</a></li>
                                    <li><a href="/{{ year }}/speakers">Speakers</a></li>
                                    <li><a href="/{{ year }}/contact">Contact Us</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Big Column-->
                <div class="big-column col-xl-6 col-lg-12 col-md-12 col-sm-12">
                    <div class="row">
                        <!--Footer Column-->
                        <div class="footer-column col-lg-6 col-md-6 col-sm-12">
                            <!--Footer Column-->
                            <div class="footer-widget contact-widget">
                                <h2 class="widget-title">Contact Us</h2>
                                <!--Footer Column-->
                                <div class="widget-content">
                                    <ul class="contact-list">
                                        <li>
                                            <span class="icon flaticon-paper-plane"></span>
                                            <div class="text">
                                                <a href="mailto:organisers@rubyconf.africa"
                                                >organisers@rubyconf.africa</a
                                                >
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Footer Column for Join Community -->
                        <div class="footer-column col-lg-6 col-md-6 col-sm-12">
                            <div class="footer-widget community-widget">
                                <h2 class="widget-title">Join Our Community</h2>
                                <ul class="user-links">
                                    <li><a href="https://rubycommunity.africa" target="_blank">ArcPlatform</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Footer Bottom-->
    <div class="footer-bottom">
        <div class="auto-container">
            <div class="inner-container clearfix">
                <div class="copyright-text">
                    <p>
                        © Copyright {{ year }} All Rights Reserved by
                        <a href="https://rubycommunity.africa/">
                            Africa Ruby Community</a
                        >
                    </p>
                </div>
                {% comment %}<div class="copyright-text">{% endcomment %}
                    {% comment %}<p>{% endcomment %}
                        {% comment %}© Copyright {{ site.current_year }} All Rights Reserved by{% endcomment %}
                        {% comment %}<a href="https://rubycommunity.africa/">{% endcomment %}
                            {% comment %}Africa Ruby Community</a{% endcomment %}
                        {% comment %}>{% endcomment %}
                    {% comment %}</p>{% endcomment %}
                {% comment %}</div>{% endcomment %}
            </div>
        </div>
        <div class="auto-container" style="display: none">
            <div class="inner-container clearfix">
                <div class="copyright-text">
                    <div class="d-flex align-items-center flex-wrap">
                        <p class="mb-0 me-2">Past Events:</p>
                        <select id="past-events" class="form-select w-auto">
                            <option value="" disabled>Select Year</option>
                            {% assign years = ",2015,2016,2017,2018,2019,2021,2024" | split: "," %}
                            {% for year in years %}
                                <option value="{{ year }}" {% if page.year == year %}selected{% endif %}>
                                    {{ year }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- End Footer -->
